#include <iostream>
using namespace std;

int main() {
	//code
	int a;
	cin>>a;
	int p=0;
	while(p<a)
	{
	    int b,c;
	    cin>>b>>c;
	    int d[b];
	    for(int i=0;i<b;i++)
	    {
	        cin>>d[i];
	    }
	    int f=0;
	    for(int j=0;j<b;j++)
	    {
	        if(d[j]==c)
	        {
	            f=1;break;
	        }
	    }
	    if(f==0)
	    cout<<-1<<"\n";
	    else
	    cout<<1<<"\n";
	    p++;
	}
	return 0;
}
